<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="700.0" prefWidth="900.0"
            style="-fx-background-color: #0A3D62; -fx-border-color: #F4D03F; -fx-border-width: 4px;"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.uquindio.edu.co.poryectofinalp1.Controller.ReporteController">

    <top>
        <VBox alignment="CENTER" spacing="15" style="-fx-padding: 20;">
            <Label style="-fx-text-fill: white;" text="Sistema de Reportes">
                <font>
                    <Font name="System Bold" size="36.0" />
                </font>
                <effect>
                    <DropShadow />
                </effect>
            </Label>

            <Label style="-fx-text-fill: #F4D03F;" text="Generaci贸n de reportes financieros y administrativos">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>
        </VBox>
    </top>

    <center>
        <VBox spacing="20" style="-fx-padding: 20;">

            <!-- Secci贸n de Reportes Generales -->
            <VBox spacing="10" style="-fx-background-color: rgba(255,255,255,0.1); -fx-padding: 15;">
                <Label style="-fx-text-fill: #28B463;" text=" REPORTES GENERALES">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Button onAction="#generarReporteConsolidado"
                            style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-pref-width: 200;"
                            text="Reporte Consolidado">
                        <font>
                            <Font size="12.0" />
                        </font>
                    </Button>

                    <Button onAction="#generarReporteTransacciones"
                            style="-fx-background-color: #9B59B6; -fx-text-fill: white; -fx-pref-width: 200;"
                            text="Todas las Transacciones">
                        <font>
                            <Font size="12.0" />
                        </font>
                    </Button>
                </HBox>
            </VBox>

            <!-- Secci贸n de Reportes por Cliente -->
            <VBox spacing="10" style="-fx-background-color: rgba(255,255,255,0.1); -fx-padding: 15;">
                <Label style="-fx-text-fill: #F39C12;" text=" REPORTES POR CLIENTE">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <TextField fx:id="numeroCuentaField"
                               promptText="N煤mero de Cuenta (Ej: 0000001001)"
                               style="-fx-pref-width: 250;"/>

                    <Button onAction="#generarReporteCliente"
                            style="-fx-background-color: #E67E22; -fx-text-fill: white; -fx-pref-width: 180;"
                            text="Reporte del Cliente">
                        <font>
                            <Font size="12.0" />
                        </font>
                    </Button>

                    <Button onAction="#generarReporteClientes"
                            style="-fx-background-color: #16A085; -fx-text-fill: white; -fx-pref-width: 180;"
                            text="Todos los Clientes">
                        <font>
                            <Font size="12.0" />
                        </font>
                    </Button>
                </HBox>
            </VBox>

            <!-- Secci贸n de Reportes Administrativos (solo ADMIN) -->
            <VBox fx:id="seccionAdmin" spacing="10" style="-fx-background-color: rgba(255,255,255,0.1); -fx-padding: 15;">
                <Label style="-fx-text-fill: #E74C3C;" text=" REPORTES ADMINISTRATIVOS">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Button onAction="#generarReporteEmpleados"
                            style="-fx-background-color: #C0392B; -fx-text-fill: white; -fx-pref-width: 200;"
                            text="Reporte de Empleados">
                        <font>
                            <Font size="12.0" />
                        </font>
                    </Button>

                    <TextField fx:id="montoSospechosoField"
                               promptText="Monto sospechoso (Ej: 5000000)"
                               style="-fx-pref-width: 200;"/>

                    <Button onAction="#generarReporteSospechosas"
                            style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-pref-width: 200;"
                            text="锔 Operaciones Sospechosas">
                        <font>
                            <Font size="12.0" />
                        </font>
                    </Button>
                </HBox>
            </VBox>

            <!-- rea de Texto para mostrar reportes -->
            <VBox spacing="10">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label style="-fx-text-fill: white;" text=" RESULTADO DEL REPORTE">
                        <font>
                            <Font name="System Bold" size="16.0" />
                        </font>
                    </Label>

                    <Button fx:id="btnLimpiar" onAction="#limpiarReporte"
                            style="-fx-background-color: #95A5A6; -fx-text-fill: white;"
                            text="Limpiar">
                        <font>
                            <Font size="11.0" />
                        </font>
                    </Button>
                </HBox>

                <ScrollPane fitToWidth="true" prefHeight="250.0">
                    <TextArea fx:id="reporteArea"
                              editable="false"
                              wrapText="true"
                              style="-fx-control-inner-background: #ECF0F1; -fx-font-family: 'Courier New'; -fx-font-size: 11px;"/>
                </ScrollPane>
            </VBox>

        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="15" style="-fx-padding: 20;">
            <Button onAction="#volverAlMenu"
                    style="-fx-background-color: #C0392B; -fx-text-fill: white; -fx-pref-width: 200;"
                    text="Volver al Men煤 Principal">
                <font>
                    <Font size="14.0" />
                </font>
                <effect>
                    <DropShadow />
                </effect>
            </Button>
        </HBox>
    </bottom>

</BorderPane>