<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1"
            fx:controller="co.uquindio.edu.co.poryectofinalp1.Controller.EmpleadoController"
            prefWidth="800.0" prefHeight="700.0"
            style="-fx-background-color: #0A3D62; -fx-border-color: #F4D03F; -fx-border-width: 4px;">
    <center>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets top="30" right="40" bottom="30" left="40"/>
            </padding>

            <Label text="Gestión de Empleados" style="-fx-text-fill: white;">
                <font>
                    <Font name="System Bold" size="32.0"/>
                </font>
            </Label>

            <VBox spacing="15" alignment="CENTER" style="-fx-background-color: rgba(255,255,255,0.1); -fx-padding: 20;">
                <TextField fx:id="nombreField" promptText="Nombre" style="-fx-pref-width: 350;"/>
                <TextField fx:id="cedulaField" promptText="Cédula" style="-fx-pref-width: 350;"/>
                <TextField fx:id="salarioField" promptText="Salario" style="-fx-pref-width: 350;"/>

                <HBox spacing="10" alignment="CENTER">
                    <Button text="Registrar Empleado" onAction="#registrarEmpleado"
                            style="-fx-background-color: #F4D03F; -fx-text-fill: black;">
                        <font>
                            <Font size="14.0"/>
                        </font>
                    </Button>
                    <Button text="Buscar Empleado" onAction="#buscarEmpleado"
                            style="-fx-background-color: #3498DB; -fx-text-fill: white;">
                        <font>
                            <Font size="14.0"/>
                        </font>
                    </Button>
                    <Button text="Actualizar Empleado" onAction="#actualizarEmpleado"
                            style="-fx-background-color: #28B463; -fx-text-fill: white;">
                        <font>
                            <Font size="14.0"/>
                        </font>
                    </Button>
                </HBox>
            </VBox>

            <VBox spacing="10">
                <Label text="Empleados Registrados" style="-fx-text-fill: white;">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Label>
                <TableView fx:id="tablaEmpleados" prefHeight="250.0" style="-fx-pref-width: 700;">
                    <columns>
                        <TableColumn fx:id="nombreColumn" text="Nombre" prefWidth="250.0"/>
                        <TableColumn fx:id="cedulaColumn" text="Cédula" prefWidth="200.0"/>
                        <TableColumn fx:id="salarioColumn" text="Salario" prefWidth="250.0"/>
                    </columns>
                </TableView>
            </VBox>

            <Button text="Volver al Menú Principal" onAction="#volverAlMenu"
                    style="-fx-background-color: #C0392B; -fx-text-fill: white;">
                <font>
                    <Font size="14.0"/>
                </font>
            </Button>
        </VBox>
    </center>
</BorderPane>