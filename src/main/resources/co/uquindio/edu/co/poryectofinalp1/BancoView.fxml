<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<BorderPane prefHeight="700.0" prefWidth="600.0" style="-fx-background-color: #0A3D62;"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.uquindio.edu.co.poryectofinalp1.Controller.BancoController">

    <top>
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;">
            <Label fx:id="lblBienvenida" text="Bienvenido" style="-fx-text-fill: white;">
                <font>
                    <Font size="18.0"/>
                </font>
            </Label>
        </VBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-border-color: yellow; -fx-border-width: 4px;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label style="-fx-text-fill: #28B463;" text="BancoUQ">
                <font>
                    <Font name="Arial Black" size="60.0"/>
                </font>
                <effect>
                    <DropShadow/>
                </effect>
            </Label>

            <!-- Este botón solo lo verán los ADMIN -->
            <Button fx:id="btnAcceder" onAction="#onAcceder" prefHeight="52.0" prefWidth="210.0"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-width: 2;"
                    text="Gestión Empleados">
                <font>
                    <Font size="20.0"/>
                </font>
                <effect>
                    <DropShadow/>
                </effect>
            </Button>

            <!-- Este botón solo lo verán los ADMIN -->
            <Button fx:id="btnCrearCuenta" onAction="#onCrearCuenta" prefHeight="52.0" prefWidth="210.0"
                    style="-fx-background-color: #F4D03F; -fx-text-fill: black;"
                    text="Crear Cuenta">
                <font>
                    <Font size="20.0"/>
                </font>
                <effect>
                    <DropShadow/>
                </effect>
            </Button>

            <!-- Este botón lo ven ADMIN y CLIENTE -->
            <Button fx:id="btnTransferencia" onAction="#onAbrirTransferencia" prefHeight="52.0" prefWidth="210.0"
                    style="-fx-background-color: #28B463; -fx-text-fill: white;"
                    text="Transacciones">
                <font>
                    <Font size="20.0"/>
                </font>
                <effect>
                    <DropShadow/>
                </effect>
            </Button>

            <Button fx:id="btnCerrarSesion" onAction="#onCerrarSesion" prefHeight="52.0" prefWidth="210.0"
                    style="-fx-background-color: #E67E22; -fx-text-fill: white;"
                    text="Cerrar Sesión">
                <font>
                    <Font size="20.0"/>
                </font>
                <effect>
                    <DropShadow/>
                </effect>
            </Button>

            <Button fx:id="btnSalir" onAction="#onSalir" prefHeight="52.0" prefWidth="210.0"
                    style="-fx-background-color: #C0392B; -fx-text-fill: white;"
                    text="Salir">
                <font>
                    <Font size="20.0"/>
                </font>
                <effect>
                    <DropShadow/>
                </effect>
            </Button>
        </VBox>
    </center>
</BorderPane>