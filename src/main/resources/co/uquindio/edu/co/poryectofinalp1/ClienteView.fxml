<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="700.0" prefWidth="600.0" 
            style="-fx-background-color: #0A3D62; -fx-border-color: #F4D03F; -fx-border-width: 4px;" 
            xmlns="http://javafx.com/javafx/23.0.1" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="co.edu.uniquindio.poo.ViewController.ClienteViewController">
    <children>
        <VBox alignment="TOP_CENTER" spacing="20" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>

            <Label text="Registro de Cliente" style="-fx-text-fill: white;">
                <font>
                    <Font name="System Bold" size="36.0"/>
                </font>
                <effect>
                    <DropShadow/>
                </effect>
            </Label>

            <VBox spacing="15" alignment="CENTER" style="-fx-background-color: rgba(255,255,255,0.1); -fx-padding: 20;">
                <TextField fx:id="nombreField" promptText="Nombre" style="-fx-pref-width: 300;"/>
                <TextField fx:id="cedulaField" promptText="Cédula" style="-fx-pref-width: 300;"/>
                <TextField fx:id="saldoInicialField" promptText="Saldo Inicial" style="-fx-pref-width: 300;"/>

                <HBox spacing="10" alignment="CENTER">
                    <Button fx:id="btnCrearCuenta" onAction="#onCrearCuenta" 
                            style="-fx-background-color: #F4D03F; -fx-text-fill: black;" 
                            text="Crear Cuenta">
                        <font>
                            <Font size="14.0"/>
                        </font>
                    </Button>

                    <Button fx:id="btnCancelar" onAction="#onCancelar" 
                            style="-fx-background-color: #C0392B; -fx-text-fill: white;" 
                            text="Cancelar">
                        <font>
                            <Font size="14.0"/>
                        </font>
                    </Button>
                </HBox>
            </VBox>

            <VBox spacing="10">
                <Label text="Clientes Registrados" style="-fx-text-fill: white;">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Label>
                <ListView fx:id="listaClientes" prefHeight="250.0" style="-fx-pref-width: 500;"/>
            </VBox>

            <Button text="Volver al Menú Principal" onAction="#volverAlMenu"
                    style="-fx-background-color: #C0392B; -fx-text-fill: white;">
                <font>
                    <Font size="14.0"/>
                </font>
            </Button>
        </VBox>
    </children>
</AnchorPane>
